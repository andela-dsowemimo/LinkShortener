<!DOCTYPE html>
<html>
<head>
  <title>LinkShortener</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="wrapper">
    <!-- Navigation -->
      <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to "Concise", root_path, class: "navbar-brand" %>
        </div>
        <!-- Top Menu Items -->
        <ul class="nav navbar-right top-nav">
            <% unless logged_in? %><li>  <%= link_to "Sign Up", signup_path, class: "navbar-brand" %></li><% end %>
            <% if logged_in? %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i> <%= current_user.name %> <b class="caret"></b></a>
                <ul class="dropdown-menu">
                  <li>
                    <%= link_to "Profile", current_user %>
                  </li>
                  <li>
                    <a href="#"><i class="fa fa-fw fa-gear"></i> Settings</a>
                  </li>
                  <li class="divider"></li>
                  <li>
                    <%= link_to "Log Out", logout_path, method: "delete" %>
                  </li>
                </ul>
                </li>
                <% else %>
                  <li>
                    <%= link_to "Sign In", login_path, class: "navbar-brand" %>
                  </li>
                <% end %>
              </ul>
              <!-- Sidebar Menu Items - These collapse to the responsive navigation menu on small screens -->
              
              <!-- /.navbar-collapse -->
          </nav>
          <div id="page-wrapper">
            <% if flash[:notice] %>
              <div class="alert alert-success">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                <%= flash[:notice] %>
              </div>
            <% elsif flash[:danger] %>
              <div class="alert alert-danger">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                <%= flash[:danger] %>
              </div>
            <% end %>
            <%= yield %>
          </div>
  </div>
</body>
</html>
