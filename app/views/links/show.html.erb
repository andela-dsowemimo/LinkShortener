<div class="row first_row">
  <div class="col-lg-12">
    <h1 class="page-header">
          Link <small>Statistics Overview</small>
    </h1>
    <ol class="breadcrumb">
      <li class="active">
        <i class="fa fa-dashboard"></i> Original URL: <%= @link.full_link_address %>
      </li>
    </ol>
    <ol class="breadcrumb">
      <li class="active">
        <i class="fa fa-dashboard"></i> Shortened URL: <%= "#{root_url}" + @link.shortened_link_address %>
      </li>
    </ol>
    <ol class="breadcrumb">
      <li class="active">
        <i class="fa fa-dashboard"></i> Created By: <%= get_link_creator_name @link %>
      </li>
    </ol>
  </div>
</div>
<h1 class="page-header">
    Browser  <small>Visit Statistics</small>
</h1>
