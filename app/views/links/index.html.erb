<header class="intro">
        <div class="intro-body">
            <div class="container">
                <div class="row">
                    <div class="col-md-8 col-md-offset-2">
                        <h1 class="brand-heading">Concise</h1>
                        <p class="intro-text">The Best URL Shortener<br>Click the button below to Get Started</p>
                        <a href="#download" type="button" class="btn btn-primary btn-circle btn-lg">
                          <i class="fa fa-angle-double-down fa-lg"></i>
                        </a>

                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- About Section -->
    <section id="about" class="container content-section text-center">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2">
                <h2>About Concise</h2>
                <p>Concise is a free URL Shortener created by the Andela Team.</p>
                <p>This theme features stock photos by <a href="http://gratisography.com/">Gratisography</a> along with a custom Google Maps skin courtesy of <a href="http://snazzymaps.com/">Snazzy Maps</a>.</p>
                <p>Grayscale includes full HTML, CSS, and custom JavaScript files along with LESS files for easy customization.</p>
            </div>
        </div>
    </section>

    <section id="download" class="content-section text-center">
        <div class="download-section">
            <div class="container">
                <div class="col-lg-8 col-lg-offset-2">
                    <h2>Shorten Link</h2>
                      <div class="shorten_and_search_form">
                        <%= form_for @link, remote: true do |f| %>
                          <%= f.text_field :full_link_address, class: "form-control form-inline" %><br/>
                          <%= f.submit "Shorten link", class: "btn btn-primary shorten-button" %><br/>
                        <% end %>

                      </div>

                </div>
            </div>
        </div>
    </section>
<section id="display_links">
<h1>Links</h1>
<span class="sort-selector">
                        <%= select_tag(:sort_id,
                          options_for_select([["Sort by Date", 1],["Sort by Popularity", 2]])
                        ) %></span>
<div id="links">
  <%= render @links %>
</div>
<%= paginate @links %>
</section>

<script type="text/javascript">
  $(document).ready(function(){
    $('[data-toggle="popover"]').popover({
      html: true,
      content: "Copied"
    });
    function executeCopy(text) {
      var input = document.createElement('textarea');
      document.body.appendChild(input);
      input.value = text;
      input.focus();
      input.select();
      document.execCommand('Copy');
      input.remove();
    }

    $(".copy-link").on("click", function(e){
      e.preventDefault();
      var link = $(this).attr("data-link");
      executeCopy(link);
    });
  });
</script>
