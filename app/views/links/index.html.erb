<div class="shorten_and_search_form">
  <%= form_for @link, remote: true do |f| %>
    <%= f.text_field :full_link_address %>
    <%= f.submit "Shorten link", class: "btn btn-primary" %>
  <% end %>

  <%= select_tag(:sort_id,
    options_for_select([["Sort by Date", 1],["Sort by Popularity", 2]])
  ) %>
</div>

<h1>Links</h1>
<div id="links">
  <%= render @links %>
</div>
<%= paginate @links %>
