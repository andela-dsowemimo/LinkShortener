<div id="login">
  <h1>Login</h1>
  <%= form_for :session, url: login_path do |f| %>
    <%= f.label :email, class: "login_form_label" %>
    <%= f.text_field :email, class: "form-control" %>
    <%= f.label :password, class: "login_form_label" %>
    <%= f.password_field :password, class: "form-control" %><br/><br/>
    <%= f.submit "Login", class: "btn btn-primary btn-lg" %>
  <% end %>
</div>
