//   right: 0px;
// }

#display_links {
  text-align: center;
}

.move-text-right {
    text-align: left;
}

.new_link {
  padding-bottom: 15px;
}

#about {
  height: 300px;
  width: 100%;
  background: url(<%= asset_path("header.jpg") %>) no-repeat ;
  .col-lg-8 {
    margin-top: 50px;
    // vertical-align: middle;
  }
}

.new_user, .new_link {
  .btn {
    color: white !important;
  }
}

.create-form {
  text-align: center;
  h1 {
    padding-bottom: 30px;
  }
  .col-md-10 {
    text-align: right;
  }
}

input {
  color: black !important;
}

.modal-body {
  .btn {
    color: white !important;
    position: relative;
    right: -410px;
  }
  .user-form {
    color: black !important;
    text-align: center;
  }
}

.edit-details {
  position: relative;
  left: 900px;
}

.table-hover tbody tr:hover td, .table-hover tbody tr:hover th {
  background-color: gray;
}

.show-page-wrapper {
  width: 750px;
  position: relative;
  left: 100px;
  // padding: 250px;
}

#login {
  text-align: center;
  h1 {
    padding-top: 50px;
    padding-bottom: 30px;
  }
  .login_form_label {
    padding-bottom: 10px;
    padding-top: 10px;
    font-size: 20px;
  }
  .form-control {
    width: 40%;
    position: relative;
    left: 30%;
  }
  .btn {
    color: white;
  }
}

li.active {
  i, strong {
    color: black !important;
  }
}

.pull-left {
  color: black !important;
}

.profile_table {
  font-size: 15px;
  margin-left: 0px;
}

.user-info {
  font-size: 20px;
}

.borderless {
  border: 2px solid #222;
  width: 1100px;
}

#link-show-container {
  width: 1100px;
  margin: 0px auto;
}

