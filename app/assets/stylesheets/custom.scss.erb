* {
  color: white;
}

html, div#page-wrapper {
  background-color: #222;
}

div#page-wrapper {
  margin-top: 70px;
}

.browser_icon {
  width: 50px;
  height: 50px;
}

.btn-circle.btn-lg {
  width: 50px;
  height: 50px;
  padding: 10px 16px;
  font-size: 18px;
  line-height: 1.33;
  border-radius: 25px;
}

.intro {
  color: white;
  text-align: center;
  height: 500px;
  width: 100%;
  background: url(<%= asset_path("header.jpg") %>) no-repeat 5%;
}

.brand-heading {
  font-size: 75px;
  text-shadow: 5px 5px 20px black;
  padding-top: 100px;
}

.intro-text {
  font-size: 20px;
  text-shadow: 5px 5px 10px black;
}

#download {
  background: url(<%= asset_path("header.jpg") %>) no-repeat ;
}

.sort-selector {
  position: relative;
  right: 0px;
}

#display_links {
  text-align: center;
}

.new_link {
  padding-bottom: 15px;
}

#about {
  height: 300px;
  .col-lg-8 {
    margin-top: 50px;
    // vertical-align: middle;
  }
}

.new_user, .new_link {
  .btn {
    color: white !important;
  }
}

.create-form {
  text-align: center;
  h1 {
    padding-bottom: 30px;
  }
  .col-md-10 {
    text-align: right;
  }
}

input {
  color: black !important;
}

.modal-body {
  .btn {
    color: white !important;
    position: relative;
    right: -410px;
  }
}

.edit-details {
  position: relative;
  left: 950px;
}

.table-hover tbody tr:hover td, .table-hover tbody tr:hover th {
  background-color: gray;
}

.show-page-wrapper {
  width: 750px;
  position: relative;
  left: 100px;
  // padding: 250px;
}

