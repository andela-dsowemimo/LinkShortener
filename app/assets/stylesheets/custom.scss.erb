* {
  color: white;
}

html, div#page-wrapper {
  background-color: #222;
}

div#page-wrapper {
  margin-top: 70px;
}

.browser_icon {
  width: 50px;
  height: 50px;
}

.btn-circle.btn-lg {
  width: 50px;
  height: 50px;
  padding: 10px 16px;
  font-size: 18px;
  line-height: 1.33;
  border-radius: 25px;
}

.intro {
  color: white;
  text-align: center;
  height: 500px;
  width: 100%;
  background: url(<%= asset_path("header.jpg") %>) no-repeat 5%;
}

.brand-heading {
  font-size: 75px;
  text-shadow: 5px 5px 20px black;
  padding-top: 50px;
}

.intro-text {
  font-size: 20px;
  text-shadow: 5px 5px 10px black;
}

.link-text {
  font-size: 15px;
}

#download {
  h2 {
    text-shadow: 5px 5px 10px black;
  }
}

